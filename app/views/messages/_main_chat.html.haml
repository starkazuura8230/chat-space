.main-chat
  .main-chat__group-info
    .group
      %p.group__text
        = @group.name
      %p.group__member
        member :
        = current_user.name
    = link_to edit_group_path(@group), class: "edit" do
      Edit
  .main-chat__message-list
    - @messages.each do |m|
      .first
        .upper-message
          %p.upper-message__user-name
            = m.user.name
          %p.upper-message__date
            = m.created_at.strftime("%Y年%m月%d日 %H時%M分")
        %p.lower-message
          - if m.content.present?
            %p.lower-message__content
            = m.content
          = image_tag m.image.url, class: 'lower-message__image' if m.image.present?
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden' 
      = f.submit 'Send', class: 'form__submit'